# MLflow Configuration
MLFLOW_TRACKING_URI=your_mlflow_uri
MLFLOW_BACKEND_STORE_URI=your_mlflow_backend_store_uri
MLFLOW_ARTIFACT_ROOT=your_mlflow_artifact_root
MLFLOW_S3_ENDPOINT_URL=your_mlflow_artifact_endpoint_url

# PostgreSQL Configuration
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_postgres_name
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=1234

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=1234
REDIS_PASSWORD=your_redis_password

# Feast Configuration
FEAST_REPO_PATH=/app/src/features/feature_repo
FEAST_ONLINE_STORE_TYPE=redis

# Model Configuration
MODEL_NAME=churn_prediction
MODEL_STAGE=Production
MODEL_VERSION=latest

# API Configuration
API_HOST=0.0.0.0
API_PORT=0000
API_WORKERS=1
API_LOG_LEVEL=info

# Prometheus Configuration
PROMETHEUS_PORT=0000
PROMETHEUS_SCRAPE_INTERVAL=15s

# Grafana Configuration
GRAFANA_PORT=0000
GRAFANA_ADMIN_USER=your_grafana_username
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Prefect Configuration
PREFECT_API_URL=http://prefect:0000/api
PREFECT_SERVER_HOST=0.0.0.0
PREFECT_SERVER_PORT=1234

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Data Configuration
DATA_PATH=/app/data
RAW_DATA_PATH=/app/data/raw
PROCESSED_DATA_PATH=/app/data/processed

# Monitoring Thresholds
DRIFT_THRESHOLD_PSI=0.2
ACCURACY_THRESHOLD=0.75
LATENCY_THRESHOLD_MS=200
MODEL_IMPROVEMENT_THRESHOLD=0.02

# Feature Store
FEATURE_STORE_OFFLINE_PATH=/app/data/processed/features
FEATURE_STORE_ONLINE_ENABLED=true